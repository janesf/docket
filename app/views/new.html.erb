
<h1>New user</h1>

<div class="depot-form">
<%= form_for(@user) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
    <%= render 'shared/error_messages', object: f.object %>

<fieldset>
<table>

<legend>Enter User Details</legend>

<tr>
 <td align="right"><%= f.label :name %>:</td>
<td><%= f.text_field :name, :size => 40 %></td>
</tr>

<tr>
 <td align="right"><%= f.label :password, 'Password' %>:</td>
<td><%= f.password_field :password, :size => 40 %></td>
</tr>

<tr>
 <td align="right"><%= f.label :password_confirmation, 'Confirm' %>:</td>
<td><%= f.password_field :password_confirmation, :size => 40 %></td>
</tr>
<tr>
<td><%= f.submit "Add User" , :class => "submit" %></td></tr>

</table>
</fieldset>
<% end %>
</div>



<%= link_to 'Back', users_path %>

