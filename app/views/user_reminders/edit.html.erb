<h1>Editing user_reminder</h1>

<%= form_for(@user_reminder) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
    <%= render 'shared/error_messages', object: f.object %>


  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  
  <%= f.collection_select(:user_id, User.find(:all), :id, :name, {:prompt => true}) %> </p>
 
  <p>
    <%= f.label :reminder_id %><br />
    <%= f.text_field :reminder_id %>
  </p>
    <%= f.collection_select(:reminder_id, Reminder.find(:all), :id, :note, {:prompt => true}) %> </p>  
  
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @user_reminder %> |
<%= link_to 'Back', user_reminders_path %>