<h1>Listing user_reminders</h1>

<table>
  <tr>
    <th>User</th>
    <th>Reminder</th>
  </tr>

<% @user_reminders.each do |user_reminder| %>
  <tr>
    <td><%=h user_reminder.user_id %></td>
    <td><%=h User.find(user_reminder.user_id).name %></td>
    <td><%=h user_reminder.reminder_id %></td>
    <td><%=h Reminder.find(user_reminder.reminder_id).note %></td>
    <td><%= link_to 'Show', user_reminder %></td>
    <td><%= link_to 'Edit', edit_user_reminder_path(user_reminder) %></td>
    <td><%= link_to 'Destroy', user_reminder, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user_reminder', new_user_reminder_path %>