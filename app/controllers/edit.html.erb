
<h1>Editing user</h1>

<div class="depot-form">
<%= form_for(@user) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
    <%= render 'shared/error_messages', object: f.object %>

<fieldset>
<table>
<%= render 'shared/error_messages', object: f.object %>
    <%= render 'shared/error_messages', object: f.object %>


<legend>Enter User Details</legend>

<tr>
 <td align="right"><%= f.label :name %>:</td>
